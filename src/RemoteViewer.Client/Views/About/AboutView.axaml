<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:RemoteViewer.Client.Controls"
        xmlns:vm="using:RemoteViewer.Client.Views.About"
        xmlns:mi="using:Material.Icons.Avalonia"
        xmlns:mik="using:Material.Icons"
        x:Class="RemoteViewer.Client.Views.About.AboutView"
        x:DataType="vm:AboutViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="About Remote Viewer"
        Width="480"
        Height="560"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        DataContextChanged="Window_DataContextChanged"
        Closed="Window_Closed">

    <Grid RowDefinitions="Auto,*,Auto" Classes="p-xl">

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Classes="gap-md items-center mt-sm mb-xl">
            <!-- Circular icon badge using design system -->
            <controls:IconBadge Icon="{x:Static mik:MaterialIconKind.RemoteDesktop}"
                                Size="Large"
                                BadgeBackground="{DynamicResource AccentBrush}"
                                IconForeground="White"/>

            <StackPanel Classes="gap-xs items-center">
                <TextBlock Text="{Binding ApplicationName}"
                           Classes="title-large items-center"/>

                <TextBlock Text="{Binding Version, StringFormat='Version {0}'}"
                           Classes="body-small secondary items-center"/>

                <TextBlock Text="{Binding Copyright}"
                           Classes="small secondary items-center mt-xs"/>
            </StackPanel>
        </StackPanel>

        <!-- Licenses Section -->
        <Border Grid.Row="1"
                Classes="card-lg">
            <Grid RowDefinitions="Auto,*">
                <StackPanel Grid.Row="0" Classes="flex-row gap-sm mb-md">
                    <mi:MaterialIcon Kind="License"
                                     Width="{StaticResource IconSizeSM}"
                                     Height="{StaticResource IconSizeSM}"
                                     Classes="justify-center text-secondary"/>
                    <TextBlock Text="Third-Party Licenses"
                               Classes="header-small justify-center"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Licenses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:ThirdPartyLicense">
                                <Border Classes="list-item mb-sm">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   Classes="header-small"/>

                                        <Border Grid.Row="0" Grid.Column="1"
                                                Classes="text-badge justify-center">
                                            <TextBlock Text="{Binding LicenseName}"/>
                                        </Border>

                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Classes="flex-row gap-lg mt-sm">
                                            <HyperlinkButton NavigateUri="{Binding Url}"
                                                             Classes="p-0 cursor-pointer">
                                                <StackPanel Classes="flex-row gap-xs">
                                                    <mi:MaterialIcon Kind="Web"
                                                                     Width="{StaticResource IconSizeXS}"
                                                                     Height="{StaticResource IconSizeXS}"
                                                                     Classes="justify-center"/>
                                                    <TextBlock Text="Website"
                                                               Classes="small justify-center"/>
                                                </StackPanel>
                                            </HyperlinkButton>
                                            <HyperlinkButton NavigateUri="{Binding LicenseUrl}"
                                                             Classes="p-0 cursor-pointer">
                                                <StackPanel Classes="flex-row gap-xs">
                                                    <mi:MaterialIcon Kind="FileDocument"
                                                                     Width="{StaticResource IconSizeXS}"
                                                                     Height="{StaticResource IconSizeXS}"
                                                                     Classes="justify-center"/>
                                                    <TextBlock Text="License"
                                                               Classes="small justify-center"/>
                                                </StackPanel>
                                            </HyperlinkButton>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Footer Button -->
        <Button Grid.Row="2"
                Classes="action-secondary w-full my-lg"
                Command="{Binding CloseCommand}">
            <StackPanel Classes="flex-row gap-icon">
                <mi:MaterialIcon Kind="Close" Width="{StaticResource IconSizeSM}" Height="{StaticResource IconSizeSM}"/>
                <TextBlock Text="Close" Classes="justify-center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
