<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RemoteViewer.Client.Views.Presenter"
        xmlns:conv="using:RemoteViewer.Client.Converters"
        xmlns:toastControls="using:RemoteViewer.Client.Controls.Toasts"
        xmlns:controls="using:RemoteViewer.Client.Controls"
        xmlns:chatControls="using:RemoteViewer.Client.Views.Chat"
        xmlns:mik="using:Material.Icons"
        xmlns:theme="using:RemoteViewer.Client.Themes"
        x:Class="RemoteViewer.Client.Views.Presenter.PresenterView"
        x:DataType="vm:PresenterViewModel"

        Icon="/Assets/avalonia-logo.ico"
        Title="Presenting"
        Width="300"
        CanResize="False"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        DragDrop.AllowDrop="True"

        DataContextChanged="Window_DataContextChanged"
        Closed="Window_Closed">

    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceElevatedBrush}"
                Padding="{theme:Spacing X=SM, Y=SM}">
            <StackPanel Orientation="Horizontal"
                        Spacing="{theme:Spacing SM}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <!-- Send File button - no flyout when single viewer -->
                <Button x:Name="SendFileButton"
                        ToolTip.Tip="Send file to viewers"
                        Classes="icon-button"
                        IsEnabled="{Binding Viewers.Count}"
                        Command="{Binding SendFileCommand}">
                    <controls:Icon Kind="FileUpload"
                                  Size="SM"/>
                </Button>

                <!-- Chat button -->
                <Button x:Name="ChatButton"
                        ToolTip.Tip="Chat"
                        Classes="icon-button"
                        Command="{Binding ShowChatCommand}">
                    <Panel>
                        <controls:Icon Kind="Chat"
                                      Size="SM"/>
                        <!-- Unread indicator -->
                        <Ellipse Width="8" Height="8"
                                 Fill="{DynamicResource ErrorBrush}"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="0,2,2,0"
                                 IsVisible="{Binding Chat.HasUnreadMessages}"/>
                    </Panel>
                </Button>

                <!-- Stream Settings flyout -->
                <Button ToolTip.Tip="Stream settings"
                        Classes="icon-button">
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel MinWidth="200" Spacing="{theme:Spacing MD}">
                                <TextBlock Text="Stream Settings"
                                           Classes="h3"
                                           Margin="{theme:Spacing Bottom=XS}"/>

                                <!-- FPS Setting -->
                                <StackPanel Spacing="{theme:Spacing XS}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="FPS" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding TargetFps}"
                                                   FontWeight="SemiBold"/>
                                    </Grid>
                                    <Slider Minimum="1"
                                            Maximum="60"
                                            Value="{Binding TargetFps}"
                                            TickFrequency="1"
                                            IsSnapToTickEnabled="True"/>
                                </StackPanel>

                                <!-- Quality Setting -->
                                <StackPanel Spacing="{theme:Spacing XS}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="Quality" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Quality}"
                                                   FontWeight="SemiBold"/>
                                    </Grid>
                                    <Slider Minimum="10"
                                            Maximum="100"
                                            Value="{Binding Quality}"
                                            TickFrequency="5"
                                            IsSnapToTickEnabled="True"/>
                                </StackPanel>

                                <!-- Bandwidth Estimate -->
                                <TextBlock Text="{Binding EstimatedBandwidth}"
                                           Classes="m1 muted"
                                           Margin="{theme:Spacing Top=SM}"/>

                                <!-- Actual Bandwidth -->
                                <TextBlock Text="{Binding ActualBandwidth}"
                                           Classes="m1 muted"/>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                    <controls:Icon Kind="Cog"
                                  Size="SM"/>
                </Button>

                <!-- Separator -->
                <Border Width="1"
                        Margin="{theme:Spacing Y=XS}"
                        Background="{DynamicResource BorderSubtleBrush}"
                        IsVisible="{Binding Viewers.Count}"/>

                <!-- Stop Presenting button -->
                <Button Command="{Binding StopPresentingCommand}"
                        ToolTip.Tip="Stop presenting"
                        Classes="icon-button">
                    <controls:Icon Kind="LanDisconnect"
                                  Size="SM"
                                  Foreground="{DynamicResource ErrorBrush}"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1"
                    Spacing="{theme:Spacing LG}"
                    Margin="{theme:Spacing LG}">

            <!-- Your Credentials -->
            <controls:Card Size="Large">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                    <!-- Row 0: Title -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="Your Credentials"
                               Classes="h3"
                               Margin="{theme:Spacing Bottom=MD}"/>

                    <!-- Row 1: ID Label + Value -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="{theme:Spacing XS}">
                        <TextBlock Text="ID"
                                   Classes="m1 muted"/>
                        <SelectableTextBlock Text="{Binding YourId}"
                                             Classes="credential"
                                             Margin="{theme:Spacing Y=SM}"/>
                    </StackPanel>

                    <!-- Copy button - spans rows 1-2, vertically centered -->
                    <Button Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"
                            Classes="icon-button"
                            VerticalAlignment="Center"
                            Margin="{theme:Spacing Left=SM}"
                            Command="{Binding CopyCredentialsCommand}"
                            ToolTip.Tip="Copy ID and password">
                        <controls:Icon Kind="ContentCopy"
                                      Size="SM"
                                      Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>

                    <!-- Row 2: Password Label + Value with Refresh -->
                    <StackPanel Grid.Row="2" Grid.Column="0"
                                Spacing="{theme:Spacing XS}"
                                Margin="{theme:Spacing Top=MD}">
                        <TextBlock Text="Password"
                                   Classes="m1 muted"/>
                        <StackPanel Orientation="Horizontal" Spacing="{theme:Spacing XS}">
                            <SelectableTextBlock Text="{Binding YourPassword}"
                                                 Classes="credential"
                                                 Margin="{theme:Spacing Y=SM}"
                                                 VerticalAlignment="Center"/>
                            <Button Command="{Binding GenerateNewPasswordCommand}"
                                    ToolTip.Tip="Generate new password"
                                    Classes="icon-button"
                                    VerticalAlignment="Center"
                                    Width="32" Height="32">
                                <controls:Icon Kind="Refresh"
                                              Size="XS"
                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </controls:Card>

            <!-- Connected Viewers -->
            <controls:Card Size="Large"
                    IsVisible="{Binding Viewers.Count}">
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding Viewers.Count, StringFormat='Viewers ({0})'}"
                               Classes="h3"
                               Margin="{theme:Spacing Bottom=MD}"/>

                    <!-- Viewers list -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  VerticalContentAlignment="Stretch">
                        <ItemsControl ItemsSource="{Binding Viewers}" VerticalAlignment="Stretch">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:PresenterViewerDisplay">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="{theme:Spacing SM}">
                                            <controls:Icon Kind="Account"
                                                          Size="XS"
                                                          VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Block button for this viewer -->
                                        <Button Grid.Column="1"
                                                Command="{Binding ToggleInputBlockCommand}"
                                                ToolTip.Tip="{Binding IsInputBlocked, Converter={conv:BoolToObject TrueValue='Unblock input', FalseValue='Block input'}}"
                                                Classes="icon-button">
                                            <controls:Icon Kind="{Binding IsInputBlocked, Converter={conv:BoolToObject TrueValue={x:Static mik:MaterialIconKind.MouseOff}, FalseValue={x:Static mik:MaterialIconKind.Mouse}}}"
                                                          Size="XS"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </controls:Card>
        </StackPanel>

        <!-- Toast Notifications (overlay, bottom-right) -->
        <toastControls:ToastsView Grid.Row="1"
                                  DataContext="{Binding Toasts}"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Margin="{theme:Spacing Right=SM, Bottom=SM}"/>

        <!-- Drop overlay for file transfer (covers entire window) -->
        <controls:DropOverlay x:Name="DropOverlay"
                              Grid.RowSpan="2"
                              Mode="Presenter"
                              IsVisible="False"
                              IsHitTestVisible="False"/>
    </Grid>
</Window>
