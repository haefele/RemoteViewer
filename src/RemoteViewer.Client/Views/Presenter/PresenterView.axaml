<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RemoteViewer.Client.Views.Presenter"
        xmlns:conv="using:RemoteViewer.Client.Converters"
        xmlns:toastControls="using:RemoteViewer.Client.Controls.Toasts"
        xmlns:controls="using:RemoteViewer.Client.Controls"
        xmlns:chatControls="using:RemoteViewer.Client.Views.Chat"
        xmlns:mi="using:Material.Icons.Avalonia"
        xmlns:mik="using:Material.Icons"
        x:Class="RemoteViewer.Client.Views.Presenter.PresenterView"
        x:DataType="vm:PresenterViewModel"

        Icon="/Assets/avalonia-logo.ico"
        Title="Presenting"
        Width="300"
        CanResize="False"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        DragDrop.AllowDrop="True"

        DataContextChanged="Window_DataContextChanged"
        Closed="Window_Closed">

    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Padding="8,6">
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <!-- Send File button - no flyout when single viewer -->
                <Button x:Name="SendFileButton"
                        ToolTip.Tip="Send file to viewers"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="32" Height="32"
                        Padding="0"
                        IsEnabled="{Binding Viewers.Count}"
                        Command="{Binding SendFileCommand}">
                    <mi:MaterialIcon Kind="FileUpload" Width="20" Height="20"/>
                </Button>

                <!-- Chat button -->
                <Button x:Name="ChatButton"
                        ToolTip.Tip="Chat"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="32" Height="32"
                        Padding="0"
                        Click="ChatButton_Click">
                    <Panel>
                        <mi:MaterialIcon Kind="Chat" Width="20" Height="20"/>
                        <!-- Unread indicator -->
                        <Ellipse Width="8" Height="8"
                                 Fill="{DynamicResource ErrorBrush}"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="0,2,2,0"
                                 IsVisible="{Binding Chat.HasUnreadMessages}"/>
                    </Panel>
                </Button>

                <!-- Stream Settings flyout -->
                <Button ToolTip.Tip="Stream settings"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="32" Height="32"
                        Padding="0">
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel MinWidth="200" Spacing="12">
                                <TextBlock Text="Stream Settings"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,4"/>

                                <!-- FPS Setting -->
                                <StackPanel Spacing="4">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="FPS" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding TargetFps}"
                                                   FontWeight="SemiBold"/>
                                    </Grid>
                                    <Slider Minimum="1"
                                            Maximum="60"
                                            Value="{Binding TargetFps}"
                                            TickFrequency="1"
                                            IsSnapToTickEnabled="True"/>
                                </StackPanel>

                                <!-- Quality Setting -->
                                <StackPanel Spacing="4">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="Quality" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Quality}"
                                                   FontWeight="SemiBold"/>
                                    </Grid>
                                    <Slider Minimum="10"
                                            Maximum="100"
                                            Value="{Binding Quality}"
                                            TickFrequency="5"
                                            IsSnapToTickEnabled="True"/>
                                </StackPanel>

                                <!-- Bandwidth Estimate -->
                                <TextBlock Text="{Binding EstimatedBandwidth}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           FontSize="12"
                                           Margin="0,8,0,0"/>

                                <!-- Actual Bandwidth -->
                                <TextBlock Text="{Binding ActualBandwidth}"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           FontSize="12"/>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                    <mi:MaterialIcon Kind="Cog" Width="20" Height="20"/>
                </Button>

                <!-- Separator -->
                <Border Width="1"
                        Margin="0,4"
                        Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        IsVisible="{Binding Viewers.Count}"/>

                <!-- Stop Presenting button -->
                <Button Command="{Binding StopPresentingCommand}"
                        ToolTip.Tip="Stop presenting"
                        Background="Transparent"
                        BorderThickness="0"
                        Width="32" Height="32"
                        Padding="0">
                    <mi:MaterialIcon Kind="LanDisconnect" Width="20" Height="20" Foreground="{DynamicResource ErrorBrush}"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Spacing="16" Margin="16">

            <!-- Your Credentials -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="8"
                    Padding="16">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                    <!-- Row 0: Title -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="Your Credentials"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,12"/>

                    <!-- Row 1: ID Label + Value -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                        <TextBlock Text="ID"
                                   FontSize="12"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <SelectableTextBlock Text="{Binding YourId}"
                                             Margin="0,8,0,0"
                                             FontFamily="Consolas, Courier New, monospace"
                                             FontSize="18"
                                             FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Copy button - spans rows 1-2, vertically centered -->
                    <Button Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"
                            VerticalAlignment="Center"
                            Command="{Binding CopyCredentialsCommand}"
                            ToolTip.Tip="Copy ID and password"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="32" Height="32"
                            Padding="0"
                            Margin="8,0,0,0">
                        <mi:MaterialIcon Kind="ContentCopy" Width="20" Height="20"
                                         Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </Button>

                    <!-- Row 2: Password Label + Value with Refresh -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4" Margin="0,12,0,0">
                        <TextBlock Text="Password"
                                   FontSize="12"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <SelectableTextBlock Text="{Binding YourPassword}"
                                                 Margin="0,8,0,2"
                                                 FontFamily="Consolas, Courier New, monospace"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 VerticalAlignment="Center"/>
                            <Button Command="{Binding GenerateNewPasswordCommand}"
                                    ToolTip.Tip="Generate new password"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="28" Height="28"
                                    Padding="0"
                                    VerticalAlignment="Center">
                                <mi:MaterialIcon Kind="Refresh" Width="18" Height="18"
                                                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Connected Viewers -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    CornerRadius="8"
                    Padding="16"
                    IsVisible="{Binding Viewers.Count}">
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding Viewers.Count, StringFormat='Viewers ({0})'}"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,12"/>

                    <!-- Viewers list -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto" 
                                  VerticalContentAlignment="Stretch">
                        <ItemsControl ItemsSource="{Binding Viewers}" VerticalAlignment="Stretch">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:PresenterViewerDisplay">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                            <mi:MaterialIcon Kind="Account" 
                                                             Width="16" 
                                                             Height="16"
                                                             VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Block button for this viewer -->
                                        <Button Grid.Column="1"
                                                Command="{Binding ToggleInputBlockCommand}"
                                                ToolTip.Tip="{Binding IsInputBlocked, Converter={conv:BoolToObject TrueValue='Unblock input', FalseValue='Block input'}}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Width="32"
                                                Height="32"
                                                Padding="0">
                                            <mi:MaterialIcon Kind="{Binding IsInputBlocked, Converter={conv:BoolToObject TrueValue={x:Static mik:MaterialIconKind.MouseOff}, FalseValue={x:Static mik:MaterialIconKind.Mouse}}}"
                                                             Width="18"
                                                             Height="18"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            </StackPanel>

        <!-- Toast Notifications (overlay, bottom-right) -->
        <toastControls:ToastsView Grid.Row="1"
                                  DataContext="{Binding Toasts}"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,8,8"/>

        <!-- Drop overlay for file transfer (covers entire window) -->
        <controls:DropOverlay x:Name="DropOverlay"
                              Grid.RowSpan="2"
                              Mode="Presenter"
                              IsVisible="False"
                              IsHitTestVisible="False"/>
    </Grid>
</Window>
