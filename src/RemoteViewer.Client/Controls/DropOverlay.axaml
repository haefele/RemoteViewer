<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mi="using:Material.Icons.Avalonia"
             x:Class="RemoteViewer.Client.Controls.DropOverlay"
             x:Name="Root">

    <Border Background="{DynamicResource OverlayDimBrush}"
            Padding="16">

        <!-- Centered card -->
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                CornerRadius="20"
                Padding="32,28">

            <StackPanel Spacing="16" HorizontalAlignment="Center">
                <!-- Icon with circular background -->
                <Border Background="{DynamicResource SuccessBrush}"
                        CornerRadius="32"
                        Width="64" Height="64"
                        HorizontalAlignment="Center">
                    <mi:MaterialIcon Kind="FileUpload"
                                     Width="32" Height="32"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                </Border>

                <!-- Text content -->
                <StackPanel Spacing="4" HorizontalAlignment="Center">
                    <TextBlock Text="Drop to Send"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="SubtitleText"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>
</UserControl>
