<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:theme="using:RemoteViewer.Client.Themes"
             x:Class="RemoteViewer.Client.Controls.DropOverlay"
             x:Name="Root">

    <Border Background="{DynamicResource OverlayDimBrush}"
            Padding="{theme:Spacing LG}">

        <!-- Centered card using overlay-card style -->
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Classes="overlay-card">

            <StackPanel Spacing="{theme:Gap LG}" HorizontalAlignment="Center">
                <!-- Icon with circular background -->
                <Border Background="{DynamicResource SuccessBrush}"
                        CornerRadius="32"
                        Width="64" Height="64"
                        HorizontalAlignment="Center">
                    <mi:MaterialIcon Kind="FileUpload"
                                     Width="{StaticResource IconSizeXL}" Height="{StaticResource IconSizeXL}"
                                     Foreground="{DynamicResource OnAccentTextBrush}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                </Border>

                <!-- Text content -->
                <StackPanel Spacing="{theme:Gap XS}" HorizontalAlignment="Center">
                    <TextBlock Text="Drop to Send"
                               Classes="title"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="SubtitleText"
                               Classes="body-small secondary"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>
</UserControl>
