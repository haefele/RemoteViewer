<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:controls="using:RemoteViewer.Client.Controls"
             x:Class="RemoteViewer.Client.Controls.IconBadge"
             x:DataType="controls:IconBadge"
             x:Name="Root">

    <UserControl.Styles>
        <!-- Default (Medium) sizing -->
        <Style Selector="controls|IconBadge Border#BadgeBorder">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style Selector="controls|IconBadge mi|MaterialIcon#BadgeIcon">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
        </Style>

        <!-- Small sizing -->
        <Style Selector="controls|IconBadge[Size=Small] Border#BadgeBorder">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="controls|IconBadge[Size=Small] mi|MaterialIcon#BadgeIcon">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
        </Style>

        <!-- Large sizing -->
        <Style Selector="controls|IconBadge[Size=Large] Border#BadgeBorder">
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="CornerRadius" Value="32"/>
        </Style>
        <Style Selector="controls|IconBadge[Size=Large] mi|MaterialIcon#BadgeIcon">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </UserControl.Styles>

    <Border x:Name="BadgeBorder"
            Background="{Binding BadgeBackground, ElementName=Root}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <mi:MaterialIcon x:Name="BadgeIcon"
                         Kind="{Binding Icon, ElementName=Root}"
                         Foreground="{Binding IconForeground, ElementName=Root}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
    </Border>
</UserControl>
