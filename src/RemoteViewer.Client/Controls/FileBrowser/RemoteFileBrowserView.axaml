<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:fb="using:RemoteViewer.Client.Controls.FileBrowser"
             xmlns:protocol="using:RemoteViewer.Server.SharedAPI.Protocol"
             x:Class="RemoteViewer.Client.Controls.FileBrowser.RemoteFileBrowserView"
             x:DataType="fb:RemoteFileBrowserViewModel">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Breadcrumb navigation -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button Command="{Binding NavigateToRootCommand}"
                            Background="Transparent" BorderThickness="0" Padding="6,4"
                            ToolTip.Tip="Go to drives">
                        <mi:MaterialIcon Kind="Home" Width="16" Height="16" Foreground="White"/>
                    </Button>
                    <ItemsControl ItemsSource="{Binding PathSegments}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="fb:PathSegment">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text=">" VerticalAlignment="Center" Margin="4,0" Foreground="#888888"/>
                                    <Button Command="{Binding $parent[UserControl].((fb:RemoteFileBrowserViewModel)DataContext).NavigateToPathCommand}"
                                            CommandParameter="{Binding FullPath}"
                                            Content="{Binding Name}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="White"
                                            Padding="6,4"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Loading/Error -->
        <StackPanel Grid.Row="1" IsVisible="{Binding IsLoading}" HorizontalAlignment="Center" Margin="8">
            <ProgressBar IsIndeterminate="True" Width="200"/>
            <TextBlock Text="Loading..." HorizontalAlignment="Center" Margin="0,4,0,0" Foreground="#888888"/>
        </StackPanel>
        <Border Grid.Row="1"
                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                Background="#442222"
                Padding="8"
                Margin="8">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF6666"/>
        </Border>

        <!-- File list -->
        <ListBox Grid.Row="2"
                 x:Name="FileListBox"
                 ItemsSource="{Binding Entries}"
                 SelectedItem="{Binding SelectedEntry}"
                 Background="#1E1E1E"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="protocol:DirectoryEntry">
                    <Grid ColumnDefinitions="Auto,*,Auto" Margin="4,2">
                        <mi:MaterialIcon Grid.Column="0"
                                         Kind="{Binding IsDirectory, Converter={x:Static fb:BoolToFolderFileIconConverter.Instance}}"
                                         Width="20" Height="20" Margin="0,0,8,0"
                                         Foreground="{Binding IsDirectory, Converter={x:Static fb:BoolToFolderColorConverter.Instance}}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   Foreground="White"
                                   ToolTip.Tip="{Binding Name}"/>
                        <TextBlock Grid.Column="2"
                                   Text="{Binding Size, Converter={x:Static fb:FileSizeConverter.Instance}}"
                                   VerticalAlignment="Center"
                                   Margin="8,0"
                                   Foreground="#888888"
                                   FontSize="12"
                                   MinWidth="60"
                                   TextAlignment="Right"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Actions -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0"
                        Command="{Binding NavigateUpCommand}"
                        ToolTip.Tip="Go up"
                        Padding="8,4">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <mi:MaterialIcon Kind="ArrowUp" Width="16" Height="16"/>
                        <TextBlock Text="Up" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="{Binding SelectedEntry.Name, FallbackValue='Select a file to download'}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#888888"
                           TextTrimming="CharacterEllipsis"/>

                <Button Grid.Column="2"
                        Command="{Binding DownloadSelectedFileCommand}"
                        IsEnabled="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}"
                        Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <mi:MaterialIcon Kind="Download" Width="16" Height="16"/>
                        <TextBlock Text="Download" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>

    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#333333"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#404040"/>
        </Style>
    </UserControl.Styles>
</UserControl>
