<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mi="using:Material.Icons.Avalonia"
             x:Class="RemoteViewer.Client.App"
             xmlns:local="using:RemoteViewer.Client"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Design System - Colors and Tokens -->
                <ResourceInclude Source="/Themes/Colors.axaml"/>
                <ResourceInclude Source="/Themes/Spacing.axaml"/>
                <ResourceInclude Source="/Themes/Borders.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <mi:MaterialIconStyles />

        <!-- Design System - Component Styles -->
        <StyleInclude Source="/Themes/Typography.axaml"/>
        <StyleInclude Source="/Themes/ButtonStyles.axaml"/>
        <StyleInclude Source="/Themes/CardStyles.axaml"/>
        <StyleInclude Source="/Themes/BadgeStyles.axaml"/>

        <!-- Tailwind-like Utility Classes -->
        <StyleInclude Source="/Themes/Utilities.axaml"/>

    </Application.Styles>
</Application>