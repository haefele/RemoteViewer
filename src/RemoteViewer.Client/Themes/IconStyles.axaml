<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mi="using:Material.Icons.Avalonia">

    <!-- ============================================== -->
    <!-- ICON SIZE CLASSES                              -->
    <!-- ============================================== -->
    <!-- Usage: <mi:MaterialIcon Classes="icon-xs"/> -->

    <!-- Extra Extra Small Icon - 12x12 -->
    <Style Selector="mi|MaterialIcon.icon-xxs">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
    </Style>

    <!-- Extra Small Icon - 16x16 -->
    <Style Selector="mi|MaterialIcon.icon-xs">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
    </Style>

    <!-- Small Icon - 20x20 -->
    <Style Selector="mi|MaterialIcon.icon-sm">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <!-- Medium Icon - 24x24 -->
    <Style Selector="mi|MaterialIcon.icon-md">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
    </Style>

    <!-- Large Icon - 32x32 -->
    <Style Selector="mi|MaterialIcon.icon-lg">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
    </Style>

    <!-- Extra Large Icon - 40x40 -->
    <Style Selector="mi|MaterialIcon.icon-xl">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
    </Style>

    <!-- Extra Extra Large Icon - 48x48 -->
    <Style Selector="mi|MaterialIcon.icon-xxl">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
    </Style>

</Styles>
