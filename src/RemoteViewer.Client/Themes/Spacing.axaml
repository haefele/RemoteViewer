<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- SPACING TOKENS                                 -->
    <!-- ============================================== -->
    <!-- Usage: Margin="{StaticResource SpacingMD}" -->

    <!-- Single-value spacing (uniform on all sides) -->
    <Thickness x:Key="SpacingXS">4</Thickness>
    <Thickness x:Key="SpacingSM">8</Thickness>
    <Thickness x:Key="SpacingMD">12</Thickness>
    <Thickness x:Key="SpacingLG">16</Thickness>
    <Thickness x:Key="SpacingXL">24</Thickness>
    <Thickness x:Key="Spacing2XL">32</Thickness>

    <!-- Horizontal spacing (left-right only) -->
    <Thickness x:Key="SpacingHorizontalXS">4,0</Thickness>
    <Thickness x:Key="SpacingHorizontalSM">8,0</Thickness>
    <Thickness x:Key="SpacingHorizontalMD">12,0</Thickness>
    <Thickness x:Key="SpacingHorizontalLG">16,0</Thickness>
    <Thickness x:Key="SpacingHorizontalXL">24,0</Thickness>

    <!-- Vertical spacing (top-bottom only) -->
    <Thickness x:Key="SpacingVerticalXS">0,4</Thickness>
    <Thickness x:Key="SpacingVerticalSM">0,8</Thickness>
    <Thickness x:Key="SpacingVerticalMD">0,12</Thickness>
    <Thickness x:Key="SpacingVerticalLG">0,16</Thickness>
    <Thickness x:Key="SpacingVerticalXL">0,24</Thickness>

    <!-- Dialog/Window padding -->
    <Thickness x:Key="DialogPadding">20</Thickness>
    <Thickness x:Key="DialogPaddingLarge">24</Thickness>
    <Thickness x:Key="WindowPadding">16</Thickness>

    <!-- Card/Panel padding -->
    <Thickness x:Key="CardPadding">14</Thickness>
    <Thickness x:Key="CardPaddingLarge">16</Thickness>

    <!-- ============================================== -->
    <!-- GAP VALUES (for StackPanel.Spacing, Grid gaps) -->
    <!-- ============================================== -->
    <!-- These are double values for use with Spacing property -->

    <x:Double x:Key="GapXXS">2</x:Double>
    <x:Double x:Key="GapXS">4</x:Double>
    <x:Double x:Key="GapSM">8</x:Double>
    <x:Double x:Key="GapMD">12</x:Double>
    <x:Double x:Key="GapLG">16</x:Double>
    <x:Double x:Key="GapXL">24</x:Double>
    <x:Double x:Key="Gap2XL">32</x:Double>

    <!-- Common component gaps -->
    <x:Double x:Key="IconTextGap">6</x:Double>
    <x:Double x:Key="ButtonGap">10</x:Double>
    <x:Double x:Key="SectionGap">16</x:Double>

</ResourceDictionary>
