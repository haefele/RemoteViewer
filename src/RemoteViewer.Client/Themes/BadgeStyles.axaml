<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mi="using:Material.Icons.Avalonia">

    <!-- ============================================== -->
    <!-- ICON BADGE STYLES                              -->
    <!-- ============================================== -->
    <!-- Icon badges are circular/rounded containers for icons -->

    <!-- Small Icon Badge - 32x32, radius 8 -->
    <!-- Usage: <Border Classes="icon-badge-sm"> -->
    <Style Selector="Border.icon-badge-sm">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Background" Value="{DynamicResource BadgeBackgroundBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Medium Icon Badge - 40x40, radius 10 -->
    <!-- Usage: <Border Classes="icon-badge-md"> -->
    <Style Selector="Border.icon-badge-md">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="{DynamicResource BadgeBackgroundBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Large Icon Badge - 64x64, circular (radius 32) -->
    <!-- Usage: <Border Classes="icon-badge-lg"> -->
    <Style Selector="Border.icon-badge-lg">
        <Setter Property="Width" Value="64"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="CornerRadius" Value="32"/>
        <Setter Property="Background" Value="{DynamicResource BadgeBackgroundBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Color variants for badges -->
    <Style Selector="Border.icon-badge-sm.accent, Border.icon-badge-md.accent, Border.icon-badge-lg.accent">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
    </Style>

    <Style Selector="Border.icon-badge-sm.success, Border.icon-badge-md.success, Border.icon-badge-lg.success">
        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
    </Style>

    <Style Selector="Border.icon-badge-sm.error, Border.icon-badge-md.error, Border.icon-badge-lg.error">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
    </Style>

    <Style Selector="Border.icon-badge-sm.info, Border.icon-badge-md.info, Border.icon-badge-lg.info">
        <Setter Property="Background" Value="{DynamicResource InfoBrush}"/>
    </Style>

    <Style Selector="Border.icon-badge-sm.warning, Border.icon-badge-md.warning, Border.icon-badge-lg.warning">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
    </Style>

    <!-- ============================================== -->
    <!-- ICON STYLES WITHIN BADGES                      -->
    <!-- ============================================== -->

    <!-- Small icon (16x16) for small badges -->
    <Style Selector="Border.icon-badge-sm mi|MaterialIcon">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Medium icon (22x22) for medium badges -->
    <Style Selector="Border.icon-badge-md mi|MaterialIcon">
        <Setter Property="Width" Value="22"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Large icon (32x32) for large badges -->
    <Style Selector="Border.icon-badge-lg mi|MaterialIcon">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- On-accent foreground for colored badges -->
    <Style Selector="Border.icon-badge-sm.accent mi|MaterialIcon,
                     Border.icon-badge-md.accent mi|MaterialIcon,
                     Border.icon-badge-lg.accent mi|MaterialIcon,
                     Border.icon-badge-sm.success mi|MaterialIcon,
                     Border.icon-badge-md.success mi|MaterialIcon,
                     Border.icon-badge-lg.success mi|MaterialIcon,
                     Border.icon-badge-sm.error mi|MaterialIcon,
                     Border.icon-badge-md.error mi|MaterialIcon,
                     Border.icon-badge-lg.error mi|MaterialIcon,
                     Border.icon-badge-sm.info mi|MaterialIcon,
                     Border.icon-badge-md.info mi|MaterialIcon,
                     Border.icon-badge-lg.info mi|MaterialIcon,
                     Border.icon-badge-sm.warning mi|MaterialIcon,
                     Border.icon-badge-md.warning mi|MaterialIcon,
                     Border.icon-badge-lg.warning mi|MaterialIcon">
        <Setter Property="Foreground" Value="{DynamicResource OnAccentTextBrush}"/>
    </Style>

    <!-- ============================================== -->
    <!-- TEXT BADGE / LABEL STYLES                      -->
    <!-- ============================================== -->
    <!-- Small text labels like license types, status indicators -->

    <!-- Small text badge -->
    <!-- Usage: <Border Classes="text-badge"><TextBlock Text="MIT"/></Border> -->
    <Style Selector="Border.text-badge">
        <Setter Property="Background" Value="{DynamicResource BadgeBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="Border.text-badge TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <!-- Status indicators -->
    <Style Selector="Border.status-badge">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Border.status-badge.online">
        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
    </Style>

    <Style Selector="Border.status-badge.offline">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
    </Style>

    <Style Selector="Border.status-badge.away">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
    </Style>

</Styles>
