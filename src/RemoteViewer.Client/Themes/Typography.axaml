<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- TYPOGRAPHY STYLES                              -->
    <!-- ============================================== -->
    <!-- Headings: h1, h2, h3 -->
    <!-- Small text: m1, m2 -->
    <!-- Special: credential -->
    <!-- Modifier: muted -->

    <!-- h1 - Large titles (22px Bold) -->
    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="LineHeight" Value="28"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- h2 - Section headers (15px SemiBold) -->
    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- h3 - Subsection headers (13px SemiBold) -->
    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="18"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- m1 - Captions, labels (12px) -->
    <Style Selector="TextBlock.m1">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="17"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <!-- m2 - Timestamps, URLs (10px) -->
    <Style Selector="TextBlock.m2">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
    </Style>

    <!-- credential - IDs/passwords (18px Bold monospace) -->
    <Style Selector="TextBlock.credential, SelectableTextBlock.credential">
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- muted - Color modifier for dimmed text -->
    <Style Selector="TextBlock.muted">
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
    </Style>

</Styles>
