<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- TYPOGRAPHY STYLES                              -->
    <!-- ============================================== -->
    <!-- Usage: <TextBlock Classes="title"/> -->

    <!-- Title - Large headings (18-22px, SemiBold, 1.2x line height) -->
    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="24"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.title-large">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="LineHeight" Value="28"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- Header - Section headers (15-16px, SemiBold, 1.3x line height) -->
    <Style Selector="TextBlock.header">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.header-small">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="LineHeight" Value="18"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- Body - Default text (13-14px, Regular, 1.5x line height) -->
    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="21"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.body-small">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- Caption - Secondary text (12px, Regular, 1.4x line height) -->
    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="17"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <!-- Small - Smallest text (10-11px, Regular, 1.4x line height) -->
    <Style Selector="TextBlock.small">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="16"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.small-muted">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
    </Style>

    <!-- Monospace - For code/credentials -->
    <Style Selector="TextBlock.monospace">
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.monospace-small">
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="LineHeight" Value="16"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <!-- Credential display - Large monospace for IDs/passwords -->
    <Style Selector="TextBlock.credential, SelectableTextBlock.credential">
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <!-- Emphasized text styles -->
    <Style Selector="TextBlock.muted">
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
    </Style>

    <Style Selector="TextBlock.secondary">
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.accent">
        <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
    </Style>

    <Style Selector="TextBlock.success">
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
    </Style>

    <Style Selector="TextBlock.error">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
    </Style>

    <Style Selector="TextBlock.warning">
        <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
    </Style>

</Styles>
