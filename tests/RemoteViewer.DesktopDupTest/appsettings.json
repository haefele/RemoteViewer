{
    "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "file": {
        "type": "File",
        "fileName": "${specialFolder:folder=CommonApplicationData}/Remote Viewer/Logs/log.txt",
        "archiveFileName": "${specialFolder:folder=CommonApplicationData}/Remote Viewer/Logs/log.{#}.txt",
        "archiveEvery": "Day",
        "archiveNumbering": "Date",
        "archiveDateFormat": "yyyy-MM-dd",
        "maxArchiveFiles": 7
      },
      "sessionFile": {
        "type": "File",
        "fileName": "${specialFolder:folder=CommonApplicationData}/Remote Viewer/Logs/session-log.txt",
        "archiveFileName": "${specialFolder:folder=CommonApplicationData}/Remote Viewer/Logs/session-log.{#}.txt",
        "archiveEvery": "Day",
        "archiveNumbering": "Date",
        "archiveDateFormat": "yyyy-MM-dd",
        "maxArchiveFiles": 7
      },
      "console": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*TrackActiveSessionsBackgroundService*",
        "minLevel": "Trace",
        "writeTo": "console,file",
        "final": true
      },
      {
        "logger": "*TrackInputDesktopBackgroundService*",
        "minLevel": "Trace",
        "writeTo": "console,sessionFile",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "file"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "console"
      }
    ]
  }
}